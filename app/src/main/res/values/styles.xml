<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--<style name="customRadioButton" parent="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton">-->
    <style name="customRadioButton" parent="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/radio_button_padding_left</item>
    </style>

    <style name="customCheckBox" parent="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/radio_button_padding_left</item>
    </style>

    <style name="normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_layout_maring_start</item>
        <item name="android:layout_marginEnd">@dimen/normal_layout_margin_end</item>
    </style>

    <style name="questionCards">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/question_cards_layout_margin</item>
        <item name="android:layout_marginBottom">@dimen/question_cards_layout_margin</item>
        <item name="android:paddingTop">@dimen/question_cards_padding</item>
        <item name="android:paddingBottom">@dimen/question_cards_padding</item>
        <item name="android:background">@drawable/rectangle_border_shape</item>
    </style>

    <style name="questionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/question_title_text_size</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/questionTitle</item>
    </style>
</resources>
